name: "Update projects.json (Featured repos)"

on:
  schedule:
    - cron: "0 3 * * *"      # يومي 03:00 UTC
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Fetch repos and generate projects.json
        run: |
          sudo apt-get update && sudo apt-get install -y jq
          curl -s -H "Accept: application/vnd.github+json" \
            https://api.github.com/users/DevEsraaMahmoud/repos?per_page=100\&type=owner\&sort=updated \
            > repos.json

          # فلترة: مش fork، مش archived، وترتيب بسيط بالنجوم ثم آخر تحديث
          cat repos.json | jq '[ .[] | select(.fork==false and .archived==false) ] | sort_by(.stargazers_count, .pushed_at) | reverse' > repos_filtered.json

          # خدي أهم 8 (وتقدري تغيري الرقم)
          cat repos_filtered.json | jq '.[0:8] | map({
            title: .name,
            description: (.description // ""),
            image: ("assets/img/projects/" + (.name | gsub(" "; "-")) + ".png"),
            link: (if (.homepage != null and .homepage != "") then .homepage else .html_url end)
          })' > projects.json

          rm -f repos.json repos_filtered.json

      - name: Commit changes
        run: |
          if [ -n "$(git status --porcelain projects.json)" ]; then
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add projects.json
            git commit -m "chore: update projects.json"
            git push
          else
            echo "No changes to commit."
          fi
